@model PreSemester_Project.Models.VolunteerMatchesView

@{
    ViewData["Title"] = "VolunteerMatches";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/Pages.css" asp-append-version="true" />

</head>


<div class="header">
    <img src="~/Images/BitworksLogo.png" id="header-img" />
    <h2>Volunteer Management System</h2>
</div>

<div style="padding-top: 10%;">
    <h1>Volunteer Matches</h1>
    <br />
    <br />


    <p>
        These are the volunteer matches @Model.opportunity.oppName at @Model.opportunity.oppCenter/p>
        <br />
        <br />


        <table class="table">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Cell Phone
                    </th>
                    <th>
                        Avaliablity
                    </th>
                    <th>
                        Approval Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model._volunteerList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CellPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Availablity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApprovalStatus)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <a asp-action="Manageopportunities">Back to Opportunities</a>
        </div>
</div>