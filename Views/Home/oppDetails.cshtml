@model PreSemester_Project.Models.Opportunity

@{
    ViewData["Title"] = "Opportunity Details";
}
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="~/css/Pages.css" asp-append-version="true" />
</head>

<div class="header">
    <img src="~/Images/BitworksLogo.png" id="header-img" />
    <h2>Volunteer Management System</h2>
</div>
<div style="padding-top: 10%">
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.datePosted)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.datePosted)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.oppName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.oppName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.oppCenter)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.oppCenter)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TimeOfEvent)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TimeOfEvent)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.description)
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.address)
            </dt>
        </dl>
    </div>
    <div>
        @Html.ActionLink("Edit", "EditOpportunity", new { id = Model.oppID }) |
        <a asp-action="ManageOpportunities">Back to Opportunities</a>
    </div>
</div>