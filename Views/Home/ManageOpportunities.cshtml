@model IEnumerable<PreSemester_Project.Models.Opportunity>

@{
    ViewData["Title"] = "Manage Opportunities";
}

<h1>ManageOpportunities</h1>

<p>
    <a asp-action="CreateOpportunity">Create New</a>
</p>

<form method="get" asp-action="SearchOpportunity" style="float:left">
    <table>
        <tr>
            <td><input type="text" placeholder="Opportunity Name" name="Key" class="form-control" /> </td>
            <td><input type="submit" value="Search" class="btn btn-primary"></td>
        </tr>
    </table>
</form>

<form method="get" asp-action="FilterOpportunity" style="float:right">
    <table>
        <tr>
            <td>
                <select name="filterChoice" id="filterChoice" class="form-control">
                    <option value="Most Recent">Most Recent (60 days)</option>
                    <option value="Center">By Center</option>
                </select>
            </td>
            <td>
                <input type="submit" value="Filter" class="btn btn-primary" />
            </td>
        </tr>
    </table>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.oppID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.oppName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.oppCenter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OppDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.oppID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.oppName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.oppCenter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OppDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditOpportunity", new { id = item.oppID }) |
                @Html.ActionLink("Details", "oppDetails", new { id = item.oppID }) |
                @Html.ActionLink("Delete", "DeleteOpportunity", new { id = item.oppID })
            </td>
        </tr>
        }
    </tbody>
</table>
